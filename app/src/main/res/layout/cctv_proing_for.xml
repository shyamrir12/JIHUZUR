<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/halfwhite"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/currentpos"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:text="CCTV quantity"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:fontFamily="@font/fonts"/>

            <TextView
                android:id="@+id/currentpos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:paddingLeft="20dp"
                android:layout_weight="1.9"

                android:text="0"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"
                android:fontFamily="@font/fonts" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="8dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Set quantities"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"
                android:fontFamily="@font/fonts"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="41dp"
                android:background="@drawable/dialog_bg"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/decrease"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_marginLeft="15dp"
                    android:onClick="increaseInteger"
                    android:src="@drawable/ic_indeterminate_check_box_black_24dp"
                    android:text="+" />


                <TextView
                    android:id="@+id/integer_number"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginLeft="15dp"
                    android:text="0"
                    android:textColor="@color/colorBlack"
                    android:textSize="24sp"
                    android:textStyle="bold" />


                <ImageView
                    android:id="@+id/increase"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_marginLeft="15dp"
                    android:onClick="increaseInteger"
                    android:src="@drawable/ic_add_circle_black_24dp"
                    android:text="+" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="0dp"
            android:gravity="center_horizontal"
            android:padding="10dp">
            <Button
                android:id="@+id/changePosition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:drawableTint="@color/white"
                android:background="@color/button_color"
                android:text="Save"
                android:textSize="14sp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:fontFamily="@font/fonts"
                android:layout_gravity="center_horizontal"/>
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
               android:layout_weight="1.5"/>
            <Button
                android:id="@+id/cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:drawableTint="@color/white"
                android:background="@color/button_color"
                android:text="Cancel"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:fontFamily="@font/fonts"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>