<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/l0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:background="@drawable/background_border_edittext">
                        <TextView
                            android:id="@+id/backArrow"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="     Back"
                            android:drawableTint="@color/colorBlack"
                            android:padding="6dp"
                            android:drawableLeft="@drawable/ic_arrow_back_black_24dp"/>
                        <view
                            class="android.support.v7.app.AlertController$RecycleListView"
                            android:layout_width="3dp"
                            android:layout_height="match_parent"
                            android:background="@color/grey" />

                        <TextView
                            android:id="@+id/cancel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="     Cancel"
                            android:padding="6dp"
                            android:drawableLeft="@drawable/ic_delete_forever_black_24dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/l1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:layout_marginRight="40dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="40dp"
                        android:layout_below="@+id/l0">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/imageEmp"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@mipmap/profile" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/l2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:layout_below="@+id/l1">
                       <TextView
                           android:id="@+id/empName"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Employee Name"
                           android:textColor="@color/colorBlack"
                           android:paddingLeft="10dp"/>
                        <TextView
                            android:id="@+id/contactNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="9987654328"
                            android:textColor="@color/colorBlack"
                            android:layout_marginTop="10dp"
                            android:paddingLeft="10dp"/>
                        <TextView
                            android:id="@+id/serviceName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Repair and Fix"
                            android:textColor="@color/colorBlack"
                            android:layout_marginTop="10dp"
                            android:paddingLeft="10dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/l3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:layout_below="@+id/l2"
                        android:layout_margin="20dp">

                        <android.support.v7.widget.CardView
                            android:id="@+id/c1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            app:cardCornerRadius="2dp"
                            app:cardElevation="2dp">
                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="comment"
                                android:textColor="@color/white"
                                android:background="@drawable/background_buttons"/>
                        </android.support.v7.widget.CardView>
                    </LinearLayout>

                </RelativeLayout>


        </RelativeLayout>

    </ScrollView>
</android.support.constraint.ConstraintLayout>