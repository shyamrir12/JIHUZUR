<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/fui_transparent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Current Position  -"
        android:textColor="@color/colorBlack"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/currentpos"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="50sp"
        android:layout_marginLeft="190dp"
        android:text="0"
        android:textColor="@color/colorBlack"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/currentpos"
        android:layout_marginTop="40dp"
        android:text="New Position"
        android:textColor="@color/colorBlack"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="66dp"
        android:background="@drawable/dialog_bg"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/decrease"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:onClick="increaseInteger"
            android:src="@drawable/ic_indeterminate_check_box_black_24dp"
            android:text="+" />


        <TextView
            android:id="@+id/integer_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="0"
            android:textColor="@color/colorBlack"
            android:textSize="40sp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/increase"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:onClick="increaseInteger"
            android:src="@drawable/ic_add_circle_black_24dp"
            android:text="+" />
    </LinearLayout>

    <Button
        android:id="@+id/changePosition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/dialog_bg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="196dp"
        android:text="Change Position"
        android:drawableLeft="@drawable/ic_unarchive_black_24dp"/>


</RelativeLayout>