<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl1"
    android:background="@drawable/backdrop">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/linear_background_shape">
                <LinearLayout
                    android:id="@+id/loginset"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="vertical"
                    android:layout_margin="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="Login"
                        android:textSize="30sp"
                        android:fontFamily="serif"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp">


                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_person_outline_black_24dp"
                            android:layout_gravity="center"
                            android:tint="@color/white"/>
                        <TextView
                            android:id="@+id/roleSpiner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Admin"
                            android:textColor="@color/white"
                            android:layout_marginLeft="15dp"
                            android:paddingLeft="8dp"
                            android:textStyle="bold"
                            android:background="#00000000"
                            android:letterSpacing="0.1"
                            android:textSize="15sp"
                            android:inputType="number"
                            android:maxLength="10"
                            android:fontFamily="serif"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="1dp"
                        android:background="#dfe0e2"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/phonemo"
                            android:layout_gravity="center"
                            android:tint="@color/white"/>
                        <EditText
                            android:id="@+id/editTextMobile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Mobile Number"
                            android:textColorHint="@color/white"
                            android:layout_marginLeft="15dp"
                            android:paddingLeft="8dp"
                            android:background="#00000000"
                            android:letterSpacing="0.1"
                            android:textSize="15sp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:inputType="number"
                            android:maxLength="10"
                            android:fontFamily="serif"
                            android:singleLine="true" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#dfe0e2"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="1dp"/>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:orientation="vertical"
            android:gravity="bottom"
            android:id="@+id/linear">
            <Button
                android:id="@+id/buttonContinue"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/button_background"
                android:text="Login"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:padding="6dp"
                android:layout_marginBottom="50dp"
                android:letterSpacing="0.2"
                android:onClick="onClick"
                android:fontFamily="monospace"/>


            <TextView
                android:id="@+id/skiplogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="40dp"
                android:text="@string/skiplogin"
                android:textSize="15sp"
                android:textColor="#cc0d4f68"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:fontFamily="serif"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear"
                android:orientation="vertical"
                android:id="@+id/coordinator">

            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginBottom="400dp">
            <LinearLayout
                android:id="@+id/l"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:src="@mipmap/final_login_logo"
                    android:layout_gravity="center_horizontal|center"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
