<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

         <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_Complaint"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:hint="Complaint">

            <AutoCompleteTextView
                android:id="@+id/editComplaint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="                              "
                android:inputType="text"
                android:textSize="15sp" />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonAddService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_add_circle_black_24dp"
            android:drawableTint="@color/white"
            android:text="Add"
            android:textSize="13sp"
            android:textColor="@color/white"
            android:background="@color/button_color"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.7"/>

        <Button
            android:id="@+id/buttonCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_cancel_black_24dp"
            android:text="Cancel"
            android:drawableTint="@color/white"
            android:textSize="13sp"
            android:textColor="@color/white"
            android:background="@color/button_color"/>

    </LinearLayout>

</LinearLayout>