<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            android:layout_margin="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp">
                <view
                    android:id="@+id/v0"
                    class="android.support.v7.app.AlertController$RecycleListView"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/l0"
                    android:background="@color/grey"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"/>
                <LinearLayout
                    android:id="@+id/l0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ComplaintID"
                        android:textColor="@color/colorBlack"
                        android:layout_weight="1.4"/>
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/complaintID"
                        android:textColor="@color/colorBlack"
                        android:text="1"
                        android:layout_weight="1.6"/>
                    <TextView
                        android:id="@+id/complaintDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:text="Complaint Date"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:visibility="gone"
                        android:text="Status"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/status"
                        android:visibility="gone"
                        android:textColor="@color/colorBlack"
                        android:text="status"
                        android:layout_weight="1"/>
                </LinearLayout>
                <view
                    android:id="@+id/v"
                    class="android.support.v7.app.AlertController$RecycleListView"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/l0"
                    android:background="@color/grey"
                    android:layout_marginTop="5dp"
                    android:visibility="visible"/>
                <LinearLayout
                    android:id="@+id/l1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/v"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/complaint"
                        android:text="Complaint"
                        android:layout_weight="1"
                        android:textColor="@color/colorBlack" />
                    <android.support.v7.widget.AppCompatImageButton
                        android:id="@+id/viewComplaintReply"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:backgroundTint="@color/white"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_rate_review_black_24dp" />
                </LinearLayout>
                <view
                    android:id="@+id/v1"
                    class="android.support.v7.app.AlertController$RecycleListView"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/l1"
                    android:background="@color/grey"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/v1"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:visibility="gone"
                        android:text="Active"
                        android:layout_weight="1"/>
                    <ToggleButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:id="@+id/activeToggle"
                        android:layout_weight="1"/>
                    <!--<android.support.v7.widget.AppCompatImageButton-->
                    <!--android:id="@+id/viewComplaintReply"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginLeft="160dp"-->
                    <!--android:backgroundTint="@color/white"-->
                    <!--android:layout_weight="1"-->
                    <!--app:srcCompat="@drawable/ic_rate_review_black_24dp" />-->

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/customerid"
                android:text="CustomerID"
                android:textColor="@color/colorBlack"
                android:visibility="gone"
                />
        </android.support.v7.widget.CardView>
        <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:hint="  "/>-->
    </LinearLayout>



</android.support.constraint.ConstraintLayout>

