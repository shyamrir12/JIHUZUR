<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/discountoffer"
     >


        <TextView
            android:id="@+id/discountName"
            android:layout_width="193dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="45dp"
            android:hint="Discount Name"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:layout_marginStart="64dp" />

    <TextView
        android:id="@+id/discounttype"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/discountAmount"
        android:layout_centerVertical="true"
        android:gravity="end"
        android:hint="Discount type"
        android:textColor="@color/colorBlack"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/discountAmount"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="124dp"
        android:hint="Discount Amount"
        android:textColor="@color/colorBlack"
        android:textStyle="bold" />





    </RelativeLayout>

