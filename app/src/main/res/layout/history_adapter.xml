<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        xmlns:card_view="http://schemas.android.com/apk/res-auto">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp">

            <android.support.v7.widget.CardView
                android:id="@+id/c1"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/header"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Home Cleaning"
                        android:textColor="@color/colorBlack"
                        android:textSize="15sp"
                        android:gravity="left"
                        android:padding="10dp"
                        android:textStyle="bold" />
                <view
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey"
                    class="android.support.v7.app.AlertController$RecycleListView"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Booking Cancelled"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp"
                        android:gravity="left"
                        android:padding="15dp" />
                    <view
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey"
                        class="android.support.v7.app.AlertController$RecycleListView"/>
                    <TextView
                        android:id="@+id/deleteItem"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Delete Item"
                        android:textSize="15sp"
                        android:gravity="right"
                        android:padding="5dp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/c2"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="10dp"
                android:layout_below="@+id/c1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/header2"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Home Cleaning"
                        android:textColor="@color/colorBlack"
                        android:textSize="15sp"
                        android:gravity="left"
                        android:padding="10dp"
                        android:textStyle="bold" />
                    <view
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey"
                        class="android.support.v7.app.AlertController$RecycleListView"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Booking Cancelled"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp"
                        android:gravity="left"
                        android:padding="15dp" />
                    <view
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey"
                        class="android.support.v7.app.AlertController$RecycleListView"/>
                    <TextView
                        android:id="@+id/deleteItem2"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Delete Item"
                        android:textSize="15sp"
                        android:gravity="right"
                        android:padding="5dp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/c3"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="10dp"
                android:layout_below="@+id/c2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/header3"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Home Cleaning"
                        android:textColor="@color/colorBlack"
                        android:textSize="15sp"
                        android:gravity="left"
                        android:padding="10dp"
                        android:textStyle="bold" />
                    <view
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey"
                        class="android.support.v7.app.AlertController$RecycleListView"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Booking Cancelled"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp"
                        android:gravity="left"
                        android:padding="15dp" />
                    <view
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey"
                        class="android.support.v7.app.AlertController$RecycleListView"/>
                    <TextView
                        android:id="@+id/deleteItem3"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Delete Item"
                        android:textSize="15sp"
                        android:gravity="right"
                        android:padding="5dp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/c4"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="10dp"
                android:layout_below="@+id/c3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/header4"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Home Cleaning"
                        android:textColor="@color/colorBlack"
                        android:textSize="15sp"
                        android:gravity="left"
                        android:padding="10dp"
                        android:textStyle="bold" />
                    <view
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey"
                        class="android.support.v7.app.AlertController$RecycleListView"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Booking Cancelled"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp"
                        android:gravity="left"
                        android:padding="15dp" />
                    <view
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey"
                        class="android.support.v7.app.AlertController$RecycleListView"/>
                    <TextView
                        android:id="@+id/deleteItem4"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Delete Item"
                        android:textSize="15sp"
                        android:gravity="right"
                        android:padding="5dp" />

                </LinearLayout>


            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/c4"/>
        </RelativeLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
