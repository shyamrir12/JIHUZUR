                        <!--android:visibility="visible">-->

                        <!--<RadioButton-->
                            <!--android:id="@+id/radioSelectRepair"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:checked="true" />-->

                    <!--</RadioGroup>-->
                    <RadioButton
                        android:id="@+id/radioSelectRepair"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:visibility="gone"
                        android:layout_weight="1.2"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:onClick="onClick"/>
                    <CheckBox
                        android:id="@+id/checkSelectRepairs"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="1.2"
                        android:visibility="gone"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:fontFamily="@font/fonts"/>
                    <TextView
                        android:id="@+id/quantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:layout_weight="1.3"
                        android:layout_centerHorizontal="true"
                        android:padding="10dp"
                        android:visibility="visible"
                        android:fontFamily="@font/fonts"/>

                    <TextView
                        android:id="@+id/ServiceDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/repair"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_centerHorizontal="true"
                        android:padding="10dp"
                        android:visibility="visible"
                        android:fontFamily="@font/fonts"/>
                    <TextView
                        android:id="@+id/pID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/repair"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_centerHorizontal="true"
                        android:padding="10dp"
                        android:visibility="gone"/>
                    <TextView
                        android:id="@+id/price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=".Rs.149"
                        android:textColor="@color/colorBlack"
                        android:layout_weight="1"
                        android:layout_centerHorizontal="true"
                        android:padding="10dp"
                        android:fontFamily="@font/fonts"/>

                </LinearLayout>

                <view
                    android:id="@+id/v2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey"
                    android:layout_below="@+id/l1"
                    class="android.support.v7.app.AlertController$RecycleListView"/>


                <LinearLayout
                    android:id="@+id/l3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/l1"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp">


                    <TextView
                        android:id="@+id/description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=".  1st Service"
                        android:textColor="@color/colorBlack"
                        android:layout_weight="2.5"
                        android:textSize="14sp"
                        android:gravity="left"
                        android:layout_marginLeft="10dp"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/fonts"/>


                    <!--<TextView-->
                        <!--android:id="@+id/ServiceDesc"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:text=".  Code on Payments page"-->
                        <!--android:textColor="@color/colorBlack"-->
                        <!--android:layout_weight="2.5"-->
                        <!--android:textSize="14sp"-->
                        <!--android:layout_centerHorizontal="true"-->
                        <!--android:layout_margin="10dp" />-->



                </LinearLayout>

