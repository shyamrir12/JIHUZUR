<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        xmlns:card_view="http://schemas.android.com/apk/res-auto">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/halfwhite">

            <RelativeLayout
                android:id="@+id/rl2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

                <LinearLayout
                    android:id="@+id/l1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp">

                    <RadioButton
                        android:id="@+id/radioSelectRepair"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="15"
                        android:visibility="visible"/>
                    <CheckBox
                        android:id="@+id/checkSelectRepairs"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="15"
                        android:visibility="visible"/>

                    <TextView
                        android:id="@+id/redioTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/repair"
                        android:textColor="@color/colorBlack"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_weight="2.5"
                        android:layout_centerHorizontal="true"
                        android:padding="10dp" />
                </LinearLayout>



                <LinearLayout
                    android:id="@+id/l3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/l1"
                    android:orientation="vertical"
                    android:layout_marginRight="50dp"
                    android:layout_marginLeft="50dp">

                    <TextView
                        android:id="@+id/price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=".  Rs.149"
                        android:textColor="@color/colorBlack"
                        android:layout_weight="2.5"
                        android:layout_centerHorizontal="true"
                        android:padding="10dp" />

                    <TextView
                        android:id="@+id/description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=".  1st Service"
                        android:textColor="@color/colorBlack"
                        android:layout_weight="2.5"
                        android:textSize="14sp"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="10dp" />


                    <TextView
                        android:id="@+id/ServiceDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=".  Code on Payments page"
                        android:textColor="@color/colorBlack"
                        android:layout_weight="2.5"
                        android:textSize="14sp"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="10dp" />



                </LinearLayout>

                <!--<Button-->
                    <!--android:id="@+id/buttonNext"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:background="#000000"-->
                    <!--android:text="Next ->"-->
                    <!--android:textColor="#FFFFFF"-->
                    <!--android:textStyle="bold"-->
                    <!--android:gravity="center"-->
                    <!--android:layout_gravity="bottom"-->
                    <!--android:padding="16dp"-->
                    <!--android:layout_margin="40dp"-->
                    <!--android:layout_marginBottom="30dp"-->
                    <!--android:letterSpacing="0.2"-->
                    <!--android:layout_below="@id/l3"-->
                   <!--/>-->
            </RelativeLayout>




        </RelativeLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>