<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/layoutContainer6"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="@string/addAdress"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:gravity="center_horizontal"
                android:layout_margin="30dp" />

        </LinearLayout>

        <view
            android:id="@+id/layoutContainer7"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"
            android:layout_below="@id/layoutContainer6"
            class="android.support.v7.app.AlertController$RecycleListView" />

        <LinearLayout
            android:id="@+id/l2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/layoutContainer7"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Mr."
                android:textStyle="bold" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Miss."
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1" />
        </LinearLayout>
        <view
            android:id="@+id/vv1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"
            android:layout_below="@id/l2"
            class="android.support.v7.app.AlertController$RecycleListView" />

        <LinearLayout
            android:id="@+id/l3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/vv1"
            android:layout_margin="35dp">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/tl1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">
            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="10dp"
                android:layout_weight="1"
                android:hint="Name"
                android:background="@drawable/background_border_edittext" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tl2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">
            <EditText
                android:id="@+id/houseStreet"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:layout_marginTop="10dp"
                android:hint="@string/house"
                android:background="@drawable/background_border_edittext" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tl3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">
            <EditText
                android:id="@+id/locality"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:layout_marginTop="10dp"
                android:hint="@string/locality"
                android:background="@drawable/background_border_edittext" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/t1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="16sp"
            android:layout_marginLeft="20dp"
            android:text="@string/NickName"
            android:layout_below="@+id/l3" />

        <LinearLayout
            android:id="@+id/l4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/t1"
            android:layout_margin="10dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Home"
                android:padding="5dp"
                android:layout_weight="1"
                android:background="@drawable/background_button"
                android:layout_margin="5dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Office"
                android:padding="5dp"
                android:layout_weight="1"
                android:background="@drawable/background_button"
                android:layout_margin="5dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Other"
                android:padding="5dp"
                android:layout_weight="1"
                android:background="@drawable/background_button"
                android:layout_margin="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:padding="5dp"
                android:layout_weight="1"
                android:layout_margin="5dp" />
        </LinearLayout>

        <view
            android:id="@+id/l5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"
            android:layout_below="@id/l4"
            class="android.support.v7.app.AlertController$RecycleListView" />

        <LinearLayout
            android:id="@+id/l6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/l5"
            android:layout_margin="20dp">

            <Button
                android:id="@+id/NextButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#000000"
                android:text="Next->"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:letterSpacing="0.2" />
        </LinearLayout>
    </RelativeLayout>
    </ScrollView>
</RelativeLayout>